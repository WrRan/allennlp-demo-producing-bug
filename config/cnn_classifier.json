{
  "dataset_reader": {
    "type": "sentiment_reader",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": false
      },
      "token_characters": {
        "type": "characters"
      }
    }
  },
  "train_data_path": "/home/user_data/wangr/ws/demo/data/data.txt",
  "validation_data_path": "/home/user_data/wangr/ws/demo/data/data.txt",
  "trainer": {
    "num_epochs": 1,
    "grad_norm": 5.0,
    "patience": 1,
    "validation_metric": "+accuracy",
    "cuda_device": 0,
    "optimizer": {
      "type": "adamax"
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 64
  },
  "model": {
    "type": "cnn_classifier",
    "dropout": 0.2,
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 300,
        "trainable": false,
        "padding_index": 0
      },
      "token_characters": {
        "type": "character_encoding",
        "dropout": 0.2,
        "embedding": {
          "embedding_dim": 100
        },
        "encoder": {
          "type": "cnn",
          "embedding_dim": 100,
          "ngram_filter_sizes": [
            2,3,4
          ],
          "num_filters": 100
        }
      }
    },
    "aggregator": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 600,
      "hidden_size": 200,
      "num_layers": 1
    },
    "classifier_feedforward": {
      "input_dim": 400,
      "num_layers": 2,
      "hidden_dims": [200, 3],
      "activations": ["relu", "linear"],
      "dropout": [0.3, 0.0]
    }
  }
}